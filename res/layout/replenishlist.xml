<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@android:color/white">
<LinearLayout
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:padding="10dp"
              android:gravity="center"
              android:text="未接收"
              android:textSize="18dp"
              android:textColor="@android:color/background_dark"
              android:id="@+id/replenish_title"
    />

    <ListView android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:id="@+id/replenishlist_listView">

    </ListView>
</LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:background="@color/viewfinder_mask"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orangerred_selector"
                android:layout_weight="1"
                android:layout_margin="10dp"
                style="@style/AdjustThreeButtonTheme"
                android:text="未接收"
                android:id="@+id/replenishlist_new"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orangerred_selector"
                android:layout_weight="1"
                android:layout_margin="10dp"
                style="@style/AdjustThreeButtonTheme"
                android:text="已确认"
                android:id="@+id/replenishlist_finish"/>
</LinearLayout>
</RelativeLayout>