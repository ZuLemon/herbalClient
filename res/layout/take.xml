<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="20dp"
              android:gravity="center"
              android:textSize="24sp"
              android:textColor="@android:color/black"
              android:text="处方信息"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_marginLeft="10dp"
                      android:orientation="horizontal">
            <TextView style="@style/CustomTextViewTheme"
                      android:width="50dp"
                      android:textSize="18sp"
                      android:text="编号"/>

            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:textColor="@android:color/black"
                      android:id="@+id/take_patientNO_textView"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView style="@style/CustomTextViewTheme"
                      android:width="50dp"
                      android:textSize="18sp"
                      android:text="姓名"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:textColor="@android:color/black"
                      android:id="@+id/take_patientName_textView"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_marginLeft="10dp"
                      android:orientation="horizontal">
            <TextView style="@style/CustomTextViewTheme"
                      android:width="50dp"
                      android:textSize="18sp"
                      android:text="类别"/>

            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:textColor="@android:color/black"
                      android:id="@+id/take_category_textView"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView style="@style/CustomTextViewTheme"
                      android:width="50dp"
                      android:textSize="18sp"
                      android:text="剂型"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:textColor="@android:color/black"
                      android:id="@+id/take_classification_textView"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="20dp"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:layout_marginLeft="10dp"
                      android:orientation="horizontal">
            <TextView style="@style/CustomTextViewTheme"
                      android:width="50dp"
                      android:textSize="18sp"
                      android:text="诊断"/>

            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:textColor="@android:color/black"
                      android:id="@+id/take_diagnosis_textView"/>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="horizontal">
            <TextView style="@style/CustomTextViewTheme"
                      android:width="50dp"
                      android:textSize="18sp"
                      android:text="付数"/>
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
                      android:textColor="@android:color/black"
                      android:id="@+id/take_presNumber_textView"/>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#76C2AF"
              android:gravity="center"
              android:textColor="@android:color/white"
              android:textSize="140sp"
              android:text=""
              android:id="@+id/take_code_textView"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#76C2AF"
              android:gravity="center"
              android:textSize="36sp"
              android:textColor="@android:color/white"
              android:text="点击取处方"
              android:id="@+id/take_hint_textView"/>

    <Button android:layout_width="match_parent"
            android:layout_height="fill_parent"
            style="@style/CustomButtonTheme"
            android:textSize="68sp"
            android:text="取处方"
            android:id="@+id/take_get_button"/>
</LinearLayout>