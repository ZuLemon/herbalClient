<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>

    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/button_unselected"
            android:layout_width="match_parent"
            android:layout_height="44.0dp">

        <TextView
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="12.0dp"
                android:layout_width="match_parent"
                android:layout_height="46.0dp"
                android:gravity="center"
                android:text="个人设置"/>

    </LinearLayout>


    <ScrollView
            android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical"
            android:background="@color/info_panel_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0">

        <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="10.0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:isScrollContainer="true">


            <!-- 第二个白框begin -->
            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/info_qzone_mail"
                    android:background="@drawable/dark_circular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dp"
                    android:layout_marginTop="10.0dp"
                    android:layout_marginRight="10.0dp">
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/boilingsetting_effort_linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50.0dp">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dp"
                            android:src="@drawable/workset"/>

                    <TextView
                            android:textSize="18sp"
                            android:textColor="#ff545454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="查询个人工作量"
                            android:layout_weight="1.0"/>

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/into_icon"/>

                </LinearLayout>
            </LinearLayout>
            <!-- 第二个白框end -->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
