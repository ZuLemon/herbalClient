<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/button_unselected"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip">
        <TextView
                android:textSize="18.0sp"
                android:textColor="@android:color/white"
                android:padding="12.0dip"
                android:layout_width="fill_parent"
                android:layout_height="46.0dip"
                android:gravity="center"
                android:text="设置工位对应规则"/>

    </LinearLayout>
    <ScrollView
            android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical"
            android:background="@color/info_panel_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:isScrollContainer="true">
            <!-- 第一个白框BEGIN -->
            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/dark_circular"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="10dp">
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:minHeight="50.0dip">
                    <TextView
                            android:textSize="18.0sp"
                            android:textColor="#ff545454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="Mac："/>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:background="@android:drawable/editbox_background_normal"
                              android:layout_weight="1"
                              android:editable="false"
                              android:id="@+id/stationrule_driver_editText"/>
                </LinearLayout>
                <View
                        android:background="@drawable/shape_line"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"/>
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10.0dip"
                        android:minHeight="50.0dip">
                    <TextView
                            android:textSize="18.0sp"
                            android:textColor="#ff545454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="工位："/>
                    <EditText android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:background="@android:drawable/editbox_background_normal"
                              android:layout_weight="1"
                              android:id="@+id/stationrule_stationName_editText"/>
                </LinearLayout>
                <View
                        android:background="@drawable/shape_line"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"/>
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10.0dip"
                        android:minHeight="50.0dip">
                    <TextView
                            android:textSize="18.0sp"
                            android:textColor="#ff545454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="规则："/>
                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/stationrule_rule_spinner"
                            android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10.0dip"
                        android:minHeight="50.0dip">
                    <TextView
                            android:textSize="18.0sp"
                            android:textColor="#ff545454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="货位："/>
                    <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/stationrule_shelf_spinner"
                            android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:background="@drawable/dark_circular"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="7.0dip"
                android:layout_marginRight="10.0dip">
            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10.0dip"
                    android:minHeight="50.0dip">
                <TextView
                        android:textSize="18sp"
                        android:textColor="#ff545454"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="规则描述："/>
                <TextView
                        android:id="@+id/stationrule_description_textView"
                        android:textSize="16.0sp"
                        android:textColor="#ff545454"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dip"
                        android:text="调剂黄河路门诊饮片"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10.0dip"
                    android:minHeight="50.0dip">
                <TextView
                        android:textSize="18.0sp"
                        android:textColor="#ff545454"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="规则类型："/>
                <TextView
                        android:id="@+id/stationrule_type_textView"
                        android:textSize="16.0sp"
                        android:textColor="#ff545454"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dip"
                        android:text="主处方"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/skyblue_circular"
                    android:id="@+id/adjust_readNextMedicine_linearLayout"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">
                <Button android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/stationrule_submit_button"
                        android:background="@drawable/orange_button"
                        style="@style/AdjustOneButtonTheme"
                        android:text="确认修改"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>