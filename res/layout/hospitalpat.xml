<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/button_unselected"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip">

        <TextView
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="12dip"
                android:layout_width="fill_parent"
                android:layout_height="46dip"
                android:gravity="center"
                android:text="查询在院病人"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@color/info_panel_bg"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="5dp"
                      android:layout_marginBottom="5dp">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:ems="10"
                    android:hint="姓名"
                    android:id="@+id/hospitalpat_patientName_editText"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="3" />
            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/hospitalpat_search_button"
                    android:text="查询"/>
        </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <ListView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/hospitalpat_patientInfo_listView">
        </ListView>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>