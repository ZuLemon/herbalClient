<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@android:color/white"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="60dp">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/id"
              android:visibility="gone"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="1"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:text="测试用户1"
                      android:textColor="@android:color/background_dark"
                      android:id="@+id/userName"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                      android:text="04-05 23:10"
                      android:textColor="@android:color/background_dark"
                      android:id="@+id/sendTime"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                      android:text="申请"
                      android:textColor="@android:color/background_dark"
                      android:id="@+id/status"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:orientation="horizontal"
        >
            <TextView android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:layout_weight="1"
                      android:text="测试用户1"
                      android:textSize="16dp"
                      android:textColor="@android:color/background_dark"
                      android:id="@+id/herbName"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:paddingLeft="5dp"
                      android:paddingRight="5dp"
                      android:text="2016-04-05"
                      android:textSize="16dp"
                      android:textColor="@android:color/background_dark"
                      android:id="@+id/shelf"
            />
        </LinearLayout>
    </LinearLayout>
    <Button android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/orangerred_selector"
            android:layout_weight="1"
            style="@style/AdjustThreeButtonTheme"
            android:text="接收"
            android:id="@+id/replenish_button"/>
</LinearLayout>