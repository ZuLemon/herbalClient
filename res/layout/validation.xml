<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/button_unselected"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip">

        <TextView
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="12dip"
                android:layout_width="fill_parent"
                android:layout_height="46dip"
                android:gravity="center"
                android:id="@+id/validation_title"
                android:text="待选复核"/>

    </LinearLayout>
    <ListView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:layout_marginTop="0.3dp"
              android:layout_weight="1"
              android:id="@+id/validation_list"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/orangerred_circular"
                android:layout_weight="1"
                style="@style/AdjustThreeButtonTheme"
                android:text="待选复核"
                android:id="@+id/validation_new"/>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/orangerred_circular"
                android:layout_weight="1"
                style="@style/AdjustThreeButtonTheme"
                android:text="已选复核"
                android:id="@+id/validation_accept"/>
    </LinearLayout>
</LinearLayout>