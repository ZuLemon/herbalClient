<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/button_unselected"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip">

        <TextView
                android:textSize="18.0sp"
                android:textColor="@android:color/white"
                android:padding="12.0dip"
                android:layout_width="fill_parent"
                android:layout_height="46.0dip"
                android:gravity="center"
                android:text="系统工具"/>
    </LinearLayout>

    <ScrollView
            android:scrollbarThumbVertical="@drawable/scrollbar_handle_vertical"
            android:background="@color/info_panel_bg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

        <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:isScrollContainer="true">


            <!-- 第一个白框BEGIN -->
            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/dark_circular"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="7.0dip"
                    android:layout_marginRight="10.0dip"
                    android:visibility="gone">
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:padding="10.0dip"
                        android:minHeight="50.0dip">

                    <TextView android:textSize="18.0sp"
                              android:textColor="@android:color/black"
                              android:paddingLeft="5.0dip"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="设置时间"/>

                    <EditText
                            android:id="@+id/sysadmin_interval_editText"
                            android:textSize="15sp"
                            android:textColor="#ff545454"
                            android:numeric="integer"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="10.0dip"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:maxLength="2"
                            android:editable="true"
                            android:focusable="false"
                            android:background="@android:color/white"
                            android:layout_weight="1.0"
                            android:selectAllOnFocus="true"
                            android:text="2"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="分钟"
                              android:gravity="left"
                              android:textSize="15sp"
                              android:textColor="#ff545454"
                              android:layout_weight="1.0"
                    />
                    <TextView
                            android:id="@+id/sysadmin_interval_textView"
                            android:textSize="18.0sp"
                            android:textColor="@color/button_unselected"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="修改"/>

                </LinearLayout>


            </LinearLayout>
            <!-- 第一个白框end -->


            <!-- 第二个白框begin -->
            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/dark_circular"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="7.0dip"
                    android:layout_marginRight="10.0dip">
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/sysadmin_extract_linearLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:src="@drawable/workset"/>
                    <TextView
                            android:textSize="18.0sp"
                            android:textColor="#ff545454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="提取处方"
                            android:layout_weight="1.0"/>
                    <ImageView
                            android:layout_width="12.0dip"
                            android:layout_height="12.0dip"
                            android:layout_marginRight="10.0dip"
                            android:src="@drawable/into_icon"/>
                </LinearLayout>
            </LinearLayout>
            <!-- 第二个白框end -->

            <!-- 第四个白框begin -->
            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/dark_circular"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="7.0dip"
                    android:layout_marginRight="10.0dip">
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/sysadmin_online_linearLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:src="@drawable/workset"/>
                    <TextView
                            android:textSize="18.0sp"
                            android:textColor="#ff545454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="查看在线用户"
                            android:layout_weight="1.0"/>
                    <ImageView
                            android:layout_width="12.0dip"
                            android:layout_height="12.0dip"
                            android:layout_marginRight="10.0dip"
                            android:src="@drawable/into_icon"/>
                </LinearLayout>
            </LinearLayout>
            <!-- 第四个白框end -->
            <!-- 第伍个白框begin -->
            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:background="@drawable/dark_circular"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="7.0dip"
                    android:layout_marginRight="10.0dip">
                <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/sysadmin_waitDispen_linearLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="50.0dip">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:src="@drawable/workset"/>
                    <TextView
                            android:textSize="18.0sp"
                            android:textColor="#ff545454"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:text="查看待调处方"
                            android:layout_weight="1.0"/>
                    <ImageView
                            android:layout_width="12.0dip"
                            android:layout_height="12.0dip"
                            android:layout_marginRight="10.0dip"
                            android:src="@drawable/into_icon"/>
                </LinearLayout>
            </LinearLayout>
            <!-- 第四个白框end -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
